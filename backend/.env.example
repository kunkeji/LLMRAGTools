# 数据库配置
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/dbname?charset=utf8mb4

# JWT配置
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API配置
BACKEND_CORS_ORIGINS='["http://localhost:8000","http://localhost:3000","http://localhost:3001"]'

# 运行时配置
RUN_MODE=dev
PORT=8111
DEBUG=True

# SMTP配置
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAILS_FROM_EMAIL=your-email@gmail.com

# 日志配置
LOG_LEVEL=INFO
LOG_PATH=logs/api.log
LOG_ROTATION="20 days"
LOG_RETENTION="1 months"

# 安全配置
ALLOWED_HOSTS='["*"]'
MAX_REQUESTS_PER_MINUTE=60
SSL_KEYFILE=
SSL_CERTFILE=

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 其他配置
TIMEZONE=Asia/Shanghai
DEFAULT_LANGUAGE=zh-cn